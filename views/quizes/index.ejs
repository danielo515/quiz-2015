<div>
<form method="GET">
<label for="search" class="rem">Búsqueda de preguntas</label>
<input type="text" name="search" placeholder="Búsqueda">
<input type="submit" value="Buscar">
</form>
</div>

<table id="indexPreguntas">
<thead><th> Tema </th><th> Pregunta </th><th> Controles</th></thead>
  <% var i; for (i=0; i < quizes.length; i++) { %>
     <tr>
        <td><%= quizes[i].tema %></td>
        <td>
          <a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
        </td>
        <%if(locals.session && locals.session.user){%>
        <td>
          <a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a>
          <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
            <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
              borrar
            </button>
          </form>
        </td>
      <%}%>
    </tr>
  <% } %>
</table>
<p>
<!-- make sure we have a session object -->
<%if(locals.session && locals.session.user){%>
  <a href="/quizes/new"><button>Crear pregunta</button></a>
<%}%>
</p>